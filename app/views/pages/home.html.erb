 <!-- Hero Banner -->
 <div class="main-banner">
  <div class="container">
    <div class="row">
      <div class="col-6 col-s-4">
        <h1>A Foot in the Door Without a Connection</h1>
        <p>Get the insider knowledge from a mentor to help you land your dream job.</p>
        <%= link_to "GET STARTED", sign_up_url, class: "btn btn-primary border-radius font-weight-bold" %>
