<h1>Now, select your Preferences</h1>

<%= simple_form_for(@user, url: update_preferences_url, method: :patch) do |f| %>
<%= f.error_notification %>
  <!-- These are hidden. Dont worry about them : ) -->
  <%= f.input :maximum_mentee, class: 'maximum_mentee' %>
  <%= f.input :experience_preference, class: 'experience_preference' %>

  <% if @user.user_type == "mentor" %>
    <h3>I have enough time for this ___  mentees at once</h3>
    <!-- The three cards for selecting max num of mentees should be here -->
    <br>
    <br>
    <br>
    <!-- ............................................................... -->

    <h3>Also, I want them to be...</h3>
    <%= f.input :city_preference, label: "City" %>
    <%= f.input :country_preference, label: "Country", as: :select, collection: @countries %>
    <%= f.input :language_preference, label: "Language", as: :select, collection: @languages %>
  <% else %>
    <h3>I want a mentor with ___ years of experience</h3>
    <!-- The three cards for selecting years of exp should be here -->
    <br>
    <br>
    <br>
    <!-- ............................................................... -->
    <h3>Also, I want him/her to be...</h3>
    <%= f.input :city_preference, label: "City" %>
    <%= f.input :country_preference, label: "Country", as: :select, collection: @countries %>
    <%= f.input :language_preference, label: "Language", as: :select, collection: @languages %>
    <%= f.input :gender_preference, label: "Gender", as: :select, collection: @genders %>


  <% end %> <!-- Closing tag for if/else -->

  <div class="align-btn">
    <button class="continue-btn btn btn-primary">MATCH ME</button>
  </div>


<% end %> <!-- Closing tag for form -->

<%= javascript_pack_tag 'preferences' %>
