<h1>Complete profile page</h1>
<div class="personal-info-form">

  <div class="container">
    <%= simple_form_for(@user, url: user_registration_url, method: :patch) do |f| %>
    <%= f.error_notification %>
    <div class="row align-form">
      <div class="col-6">
        <div class="container">
          <div class="row d-flex justify-content-space-between">
            <div class="col-6">
              <%= f.input :first_name,
              # required: true,
              placeholder: 'John' %>
            </div>
            <div class="col-6">
              <%= f.input :last_name,
              # required: true,
              placeholder: 'Doe' %>
            </div>
          </div>
        </div>
        <div class="container">
          <div class="row d-flex justify-content-space-between">
            <div class="col-6">
              <%= f.input :city,
              # required: true,
              placeholder: "New York"%>
            </div>
            <div class="col-6">
              <%= f.input :country,
              # required: true,
              collection: @countries,
              selected: "USA"%>
            </div>
          </div>
        </div>
        <div class="container">
          <div class="row d-flex justify-content-space-between">
            <div class="col-6">
              <%= f.input :gender,
              collection: @genders,
              selected: "Male"%>
            </div>
            <div class="col-6">
              <%= f.input :language,
              # required: true,
              collection: @languages,
              selected: "English" %>
            </div>
          </div>
        </div>
        <div class="mentee-personal-form">
          <div class="container">
            <div class="row d-flex justify-content-space-between">
              <div class="col-12">
                <%= f.input :university,
                # required: true,
                # label: "Title",
                placeholder: 'New York University' %>
              </div>
            </div>
          </div>
          <div class="container">
            <div class="row d-flex justify-content-space-between">
              <div class="col-12">
                <%= f.input :photo, as: :file, input_html: {id: "mentee_user_photo"} %>
              </div>
            </div>
          </div>
        </div>
        <!-- Personal Information Form for Mentors -->
        <div class="mentor-personal-form">
          <div class="container">
            <div class="row d-flex justify-content-space-between">
              <div class="col-12">
                <%= f.input :industry,
                # required: true,
                collection: @industries,
                selected: 'Information Technology and Services' %>
                <%= f.input :role,
                # required: true,
                label: "Title",
                placeholder: 'Director of AI' %>
                <%= f.input :company,
                # required: true,
                placeholder: 'Microsoft' %>
                <%= f.input :experience,
                # required: true,
                # hint: "Years of Experience",
                label: "Years of Experience",
                collection: @experiences,
                selected: '9-11' %>
                <%= f.input :linkedin_url,
                label: "Linkedin url",
                placeholder: 'https://www.linkedin.com/in/johndoe' %>
                <%= f.input :maximum_mentee,
                # required: true,
                label: 'Maximum number of Mentees',
                # hint: "How many mentees would you like to have?",
                as: :radio_buttons,
                collection: 1..3 %>
                <%= f.input :photo, as: :file, input_html: {id: "mentor_user_photo"} %>
              </div>
            </div>
          </div>
        </div>
        <br>
        <div class="align-btn">
          <button class="continue-btn btn btn-primary">CONTINUE</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
