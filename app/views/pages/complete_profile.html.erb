
<div class="signup-banner">
  <div class="completeprofile-section">
    <div class="step-1-top">
      <!-- <a class="back-arrow" href="/sign_up">
        <%= image_tag "back-arrow.png", class: "small-icon" %>
      </a> -->
      <a class="close" href="/">
        <%= image_tag "close.png", class: "small-icon" %>
      </a>
      <div class="steps-logo">
        <%= image_tag "logo-text-white.png", class: "logo" %>
      </div>
      <br>
    </div>

<div class="header">
<h2>Complete Your Profile</h2>
</div>
<br>
<div class="personal-info-form">
  <div class="container">
    <%= simple_form_for(@user, url: user_registration_url, method: :patch) do |f| %>
    <%= f.error_notification %>

    <div class="row align-form">
      <div class="col-6">
        <div class="container">
          <div class="row d-flex justify-content-space-between">
            <div class="col-6">
              <%= f.input :first_name,
                # required: true,
                placeholder: 'John' %>
              </div>
              <div class="col-6">
                <%= f.input :last_name,
                # required: true,
                placeholder: 'Doe' %>
              </div>
            </div>
          </div>
          <div class="container">
            <div class="row d-flex justify-content-space-between">
              <div class="col-6">
                <%= f.input :city,
                # required: true,
                placeholder: "New York"%>
              </div>
              <div class="col-6">
                <%= f.input :country,
                # required: true,
                collection: @countries,
                selected: "USA"%>
              </div>
            </div>
          </div>
          <div class="container">
            <div class="row d-flex justify-content-space-between">
              <div class="col-6">
                <%= f.input :gender,
                collection: @genders,
                selected: "Male"%>
              </div>
              <div class="col-6">
                <%= f.input :title,
                # required: true,
                placeholder: "Sr. Developer" %>
              </div>
            </div>
          </div>

          <% if @user.user_type == "mentee" %>
          <div class="mentee-personal-form">
            <div class="container">
              <div class="row d-flex justify-content-space-between">
                <div class="col-12">
                  <%= f.input :university,
                  # required: true,
                  # label: "Title",
                  placeholder: 'New York University' %>
                </div>
                <div class="col-12">
                  <%= f.input :linkedin_url,
                  label: "Linkedin url",
                  placeholder: 'https://www.linkedin.com/in/johndoe' %>
                </div>
              </div>
            </div>
          </div>
          <br>

          <!-- Mentor personal Information -->
          <% else %>
          <div class="mentor-personal-form">
            <div class="container">
              <div class="row d-flex justify-content-space-between">
                <div class="col-12">
                  <%= f.input :experience,
                  # required: true,
                  # hint: "Years of Experience",
                  label: "Years of Experience",
                  collection: @experiences,
                  selected: '9-11' %>
                  <%= f.input :company,
                  # required: true,
                  placeholder: 'Microsoft' %>

                  <%= f.input :linkedin_url,
                  label: "Linkedin url",
                  placeholder: 'https://www.linkedin.com/in/johndoe' %>
                </div>
              </div>
            </div>
          </div>
          <% end %>

          <div class="align-btn">
            <button class="continue-btn btn btn-primary">CONTINUE</button>
          </div>

        </div>
      </div>
      <% end %>

</div>
    </div>
  </div>
</div>
</div>



