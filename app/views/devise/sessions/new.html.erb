<div class="login-banner">
  <div class="container">
    <div class="row align-form">
      <div class="col-6">
        <div class="steps-logo">
          <%= image_tag "logo-text-white.png", class: "logo" %>
        </div>
        <div class="text-align">
          <h2>Log in</h2>
        </div>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <div class="align-btn btn btn-primary ">
              <%= f.button :submit, "LOG IN" %>
            </div>
          </div>
        <% end %>
        <br>
        <%= render "devise/shared/links" %>
        <div class="container">
          <div class="row d-flex justify-content-center or-text">
            <h3>or</h3>
            <br>
          </div>
        </div>
        <div class="container">
          <div class="row d-flex justify-content-center">
            <div class="social-signin-btn">
              <%= image_tag "linkedin.png", class: "linkedin-logo" %>
              <%- if devise_mapping.omniauthable? %>
                <%- resource_class.omniauth_providers.each do |provider| %>
                  <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "social-signin-text" %><br/>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
